<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootCollection" prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="77.0" layoutY="14.0" prefHeight="30.0" prefWidth="135.0" styleClass="LabelHeader" text="Items">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TableView fx:id="tableViewCollection" layoutX="77.0" layoutY="60.0" prefHeight="281.0" prefWidth="850.0">
        <columns>
          <TableColumn prefWidth="90.0" text="Item code">
            <cellValueFactory>
                <PropertyValueFactory property="itemCode" />
            </cellValueFactory>
            </TableColumn>
          <TableColumn prefWidth="108.0" text="Available">
              <cellValueFactory>
                  <PropertyValueFactory property="availability" />
              </cellValueFactory>
          </TableColumn>
            <TableColumn prefWidth="223.0" text="Title">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="0.0" prefWidth="218.0" text="Author">
            <cellValueFactory>
                <PropertyValueFactory property="author" />
            </cellValueFactory>
        </TableColumn>
            <TableColumn prefWidth="210.0" text="Expected return date">
               <cellValueFactory>
                  <PropertyValueFactory property="author" />
               </cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <HBox layoutX="77.0" layoutY="364.0" prefHeight="25.0" prefWidth="850.0" spacing="5.0">
         <children>
            <TextField fx:id="textFieldTitle" prefHeight="25.0" prefWidth="298.0" promptText="Title" />
            <TextField fx:id="textFieldAuthor" prefHeight="25.0" prefWidth="183.0" promptText="Author" />
            <Button mnemonicParsing="false" onAction="#addItem" prefWidth="120.0" text="Add item" />
            <Button mnemonicParsing="false" onAction="#editItem" prefWidth="120.0" text="Edit item" />
            <Button mnemonicParsing="false" onAction="#deleteItem" prefWidth="120.0" text="Delete item" />
         </children>
      </HBox>
      <HBox layoutX="77.0" layoutY="409.0" prefHeight="55.0" prefWidth="850.0" spacing="15.0">
         <children>
            <Label fx:id="errorLabel" prefHeight="20.0" prefWidth="638.0" text="Tap once on a row to show title and author. Tap twice to edit the availability">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#readFromCSV" prefHeight="25.0" prefWidth="150.0" text="Import Items">
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
